<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="invoice_data_from_sale_order_form" model="ir.ui.view">
			<field name="name">invoice.data.from.sale.order.form</field>
			<field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_form"/>
			<field name="arch" type="xml">
                <!-- vista heredada -->
                <xpath expr="//sheet/notebook" position="inside">
                    <page string="Incoming Sale Information">
                        <group>
                            <field name="payment"/>
                            <field name="document_type"/>
                            <field name="document_number"/>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>