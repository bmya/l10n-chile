<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="sale_order_incoming_data_xml_form" model="ir.ui.view">
			<field name="name">sale.order.incoming.data.xml.form</field>
			<field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
			<field name="arch" type="xml">
                <!-- vista heredada -->
                <xpath expr="//sheet/notebook" position="inside">
                    <page string="Incoming Sale Information">
                        <group>
                            <field name="payment"/>
                            <field name="document_type"/>
                            <field name="document_number"/>
                            <field name="dte_inc_id" widget="one2many_list"
                                   attrs="{'readonly': True}"
                            options="{'no_create': True}"/>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
